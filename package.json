{
  "name": "audio-devotions",
  "type": "module",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "vite",
    "build": "vite build",
    "serve": "vite preview",
    "test": "vitest",
    "test:storybook": "vitest --project=storybook",
    "test:unit": "vitest --project=unit",
    "test:ui": "vitest --ui",
    "lint": "oxlint --fix",
    "lint:check": "oxlint",
    "format": "oxfmt --write .",
    "format:check": "oxfmt .",
    "typecheck": "tsc --noEmit",
    "prepare": "husky",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-player": "^3.4.0"
  },
  "devDependencies": {
    "@storybook/addon-a11y": "^10.2.5",
    "@storybook/addon-docs": "^10.2.5",
    "@storybook/addon-vitest": "^10.2.5",
    "@storybook/react-vite": "^10.2.5",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.3",
    "@vitest/browser-playwright": "4.0.18",
    "@vitest/coverage-v8": "4.0.18",
    "@vitest/ui": "^4.0.18",
    "husky": "^9.1.7",
    "oxfmt": "^0.28.0",
    "oxlint": "^1.43.0",
    "playwright": "^1.58.1",
    "storybook": "^10.2.5",
    "vite": "^7.3.1",
    "vite-plugin-svgr": "^4.5.0",
    "vitest": "^4.0.18"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
